<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.myapp.laporankaryawan.ui.tambahlaporanharian.TambahLaporanHarian">

    <data>

        <variable
            name="isLoading"
            type="boolean" />

        <variable
            name="outlet"
            type="com.myapp.domain.model.OutletModel" />

        <variable
            name="alamat"
            type="String" />

        <variable
            name="image"
            type="String" />

        <variable
            name="vm"
            type="com.myapp.laporankaryawan.ui.tambahlaporanharian.TambahLaporanHarianViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/sp_16"
                android:layout_marginTop="@dimen/padding_10"
                android:paddingEnd="@dimen/sp_16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Outlet" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_muda_banget"
                    android:inputType="text"
                    android:padding="@dimen/dp_16"
                    android:gravity="top"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="false"
                    android:textColor="@color/black_tua_hehe"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@={outlet.namaOutlet}"
                    android:hint="Pilih Outlet " />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_muda_banget"
                    android:inputType="text"
                    android:padding="@dimen/dp_16"
                    android:gravity="top"
                    android:minHeight="@dimen/dp_100"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="false"
                    android:textColor="@color/black_tua_hehe"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@={alamat}"
                    android:hint="Masukkan Alamat Laporan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_muda_banget"
                    android:inputType="text"
                    android:padding="@dimen/dp_16"
                    android:gravity="top"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="false"
                    android:textColor="@color/black_tua_hehe"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@={vm.req.keteranganLaporanharian}"
                    android:hint="Masukkan Keterangan Laporan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Keterangan" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_100"
                    android:maxHeight="@dimen/dp_200"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="@dimen/padding_10"
                    setImageUrl="@{image}"
                    android:src="@drawable/logo" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="@dimen/sp_16"
                    android:background="@drawable/ripple_primary"
                    android:clickable="true"
                    viewGone="@{!isLoading}"
                    android:onClick="@{()->vm.simpan()}"
                    android:text="Simpan" />

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    viewGone="@{isLoading}"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>